<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <EditText
        android:id="@+id/etCostTitle"
        android:hint="Enter Title"
        android:inputType="text"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etCostAmount"
        android:layout_below="@+id/etCostTitle"
        android:hint="Enter amount"
        android:inputType="number"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSaveCostEvent"
        android:layout_marginTop="14dp"
        android:text="Save"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:onClick="save"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="57dp"
        android:layout_below="@+id/etCostAmount"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnCancelCostEvent"
        android:text="Cancel"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:onClick="cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_alignBaseline="@+id/btnSaveCostEvent"
        android:layout_alignBottom="@+id/btnSaveCostEvent"
        android:layout_toStartOf="@+id/btnSaveCostEvent" />

</RelativeLayout>